<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://bootswatch.com/5/darkly/bootstrap.min.css" rel="stylesheet">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>



    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('films') }}">Films</a>


            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href={{ path('new') }}>creation</a>
                    </li>

                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('signout') }}>logout</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">register</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('signin') }}">login</a>
                    </li>
                    {% endif %}

                </ul>

            </div>
        </div>
    </nav>



    <div class="container"> {% block body %}{% endblock %}</div>

    </body>
</html>
